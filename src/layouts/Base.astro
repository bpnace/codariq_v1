        position: relative;
        display: inline-block;
        transition: color 0.3s ease;
      }

      /* Underline hover effect only on desktop (md breakpoint and up) */
      @media (min-width: 768px) {
        .nav-link::after {
          content: '';
          position: absolute;
          width: 0;
          height: 2px;
          bottom: -4px;
          left: 50%;
          background-color: #ea580c; /* Orange brand color */
