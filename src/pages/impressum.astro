---
import Base from "../layouts/Base.astro";
---

<Base
  title="Impressum - Codariq"
  description="Impressum und rechtliche Angaben der Codariq GmbH"
>
  <div class="min-h-screen bg-white pt-20 pb-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Back Button -->
      <div class="mb-8">
        <a
          href="/"
          class="inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors"
        >
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"></path>
          </svg>
          Zurück zur Startseite
        </a>
      </div>

      <!-- Page Header -->
      <div class="mb-12">
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
          Impressum
        </h1>
        <p class="text-lg text-gray-600">
          Angaben gemäß § 5 Digitale-Dienste-Gesetz (DDG)
        </p>
      </div>

      <!-- Content -->
      <div class="max-w-none">
        <div class="overflow-x-auto">
          <table class="w-full border-collapse border border-gray-300 mb-8">
            <thead>
              <tr class="bg-gray-50">
                <th
                  class="border border-gray-300 px-4 py-3 text-left font-bold text-gray-900"
                  >Pflichtangabe</th
                >
                <th
                  class="border border-gray-300 px-4 py-3 text-left font-bold text-gray-900"
                  >Inhalt</th
                >
              </tr>
            </thead>
            <tbody>
              <tr>
                <td
                  class="border border-gray-300 px-4 py-3 font-medium text-gray-700"
                  >Unternehmensname</td
                >
                <td class="border border-gray-300 px-4 py-3 text-gray-700"
                  >Codariq – Tarik Arthur Marshall</td
                >
              </tr>
              <tr class="bg-gray-50">
                <td
                  class="border border-gray-300 px-4 py-3 font-medium text-gray-700"
                  >Rechtsform</td
                >
                <td class="border border-gray-300 px-4 py-3 text-gray-700"
                  >Kleingewerbe (Beratung, Implementierung und Wartung von KI-Systemen sowie Rettung misglückter KI-Projekte)</td
                >
              </tr>
              <tr>
                <td
                  class="border border-gray-300 px-4 py-3 font-medium text-gray-700"
                  >Geschäftsanschrift</td
                >
                <td class="border border-gray-300 px-4 py-3 text-gray-700"
                  >Sigmaringer Str. 27, 10713 Berlin, Deutschland</td
                >
              </tr>
              <tr class="bg-gray-50">
                <td
                  class="border border-gray-300 px-4 py-3 font-medium text-gray-700"
                  >Vertretungsberechtigter</td
                >
                <td class="border border-gray-300 px-4 py-3 text-gray-700"
                  >Tarik Arthur Marshall</td
                >
              </tr>
              <tr>
                <td
                  class="border border-gray-300 px-4 py-3 font-medium text-gray-700"
                  >Kontakt</td
                >
                <td class="border border-gray-300 px-4 py-3 text-gray-700">
                  Tel.: <span
                    class="obfuscated-phone"
                    data-phone="0176 3137 8294">01XX XXX XXXX</span
                  > – E-Mail: <span
                    class="obfuscated-email"
                    data-name="kontakt"
                    data-domain="codariq.de">[email&#160;geschützt]</span
                  >
                </td>
              </tr>
              <tr class="bg-gray-50">
                <td
                  class="border border-gray-300 px-4 py-3 font-medium text-gray-700"
                  >Handelsregister</td
                >
                <td class="border border-gray-300 px-4 py-3 text-gray-700"
                  >Kein Eintrag erforderlich (Freiberufler/Kleingewerbe)</td
                >
              </tr>
              <tr>
                <td
                  class="border border-gray-300 px-4 py-3 font-medium text-gray-700"
                  >USt-ID</td
                >
                <td class="border border-gray-300 px-4 py-3 text-gray-700"
                  >Nicht erteilt (Kleinunternehmer gem. § 19 UStG)</td
                >
              </tr>
              <tr class="bg-gray-50">
                <td
                  class="border border-gray-300 px-4 py-3 font-medium text-gray-700"
                  >Mitgliedschaft</td
                >
                <td class="border border-gray-300 px-4 py-3 text-gray-700"
                  >Industrie- und Handelskammer Berlin, Fasanenstr. 85, 10623
                  Berlin</td
                >
              </tr>
              <tr>
                <td
                  class="border border-gray-300 px-4 py-3 font-medium text-gray-700"
                  >Aufsichtsbehörde</td
                >
                <td class="border border-gray-300 px-4 py-3 text-gray-700"
                  >Berliner Beauftragte für Datenschutz und
                  Informationsfreiheit, Alt-Moabit 59-61, 10555 Berlin</td
                >
              </tr>
              <tr class="bg-gray-50">
                <td
                  class="border border-gray-300 px-4 py-3 font-medium text-gray-700"
                  >Berufshaftpflicht</td
                >
                <td class="border border-gray-300 px-4 py-3 text-gray-700"
                  >Hiscox SA, Zweigniederlassung Deutschland, Arnulfstraße 31,
                  80636 München<br />Versicherungssumme: 1.000.000 € pro
                  Schadenfall</td
                >
              </tr>
              <tr>
                <td
                  class="border border-gray-300 px-4 py-3 font-medium text-gray-700"
                  >EU-Streitschlichtung</td
                >
                <td class="border border-gray-300 px-4 py-3 text-gray-700">
                  Online-Plattform: <a
                    href="https://ec.europa.eu/consumers/odr"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-blue-600 hover:text-blue-800 underline"
                    >https://ec.europa.eu/consumers/odr</a
                  >
                </td>
              </tr>
              <tr class="bg-gray-50">
                <td
                  class="border border-gray-300 px-4 py-3 font-medium text-gray-700"
                  >Verbraucherstreitbeilegung</td
                >
                <td class="border border-gray-300 px-4 py-3 text-gray-700"
                  >Wir nehmen nicht an Streitbeilegungsverfahren vor einer
                  Verbraucherschlichtungsstelle teil.</td
                >
              </tr>
            </tbody>
          </table>
        </div>

        <p class="text-sm text-gray-500 mt-8">Stand: Januar 2025</p>
      </div>
    </div>
  </div>

  <style>
    .obfuscated-email,
    .obfuscated-phone {
      cursor: pointer;
      position: relative;
      color: #4b5563;
      text-decoration: dotted underline;
    }
    .obfuscated-email:hover,
    .obfuscated-phone:hover {
      color: #1f2937;
    }
    .obfuscated-email::after,
    .obfuscated-phone::after {
      content: "Klicken zum Anzeigen";
      position: absolute;
      bottom: 100%;
      left: 50%;
      transform: translateX(-50%);
      background-color: #374151;
      color: white;
      padding: 4px 8px;
      border-radius: 4px;
      font-size: 12px;
      opacity: 0;
      visibility: hidden;
      transition:
        opacity 0.2s,
        visibility 0.2s;
      white-space: nowrap;
      pointer-events: none;
      z-index: 10;
    }
    .obfuscated-email:hover::after,
    .obfuscated-phone:hover::after {
      opacity: 1;
      visibility: visible;
    }
  </style>

  <script>
    // Wait for the DOM to be fully loaded
    document.addEventListener("DOMContentLoaded", function () {
      // Handle email obfuscation
      const emailElements = document.querySelectorAll(".obfuscated-email");
      emailElements.forEach((element) => {
        element.addEventListener("click", function () {
          const name = this.getAttribute("data-name");
          const domain = this.getAttribute("data-domain");
          if (name && domain) {
            const email = name + "@" + domain;
            this.textContent = email;
            this.classList.remove("obfuscated-email");
            this.removeAttribute("data-name");
            this.removeAttribute("data-domain");

            // Optional: Create a mailto link
            const link = document.createElement("a");
            link.href = "mailto:" + email;
            link.textContent = email;
            this.parentNode.replaceChild(link, this);
          }
        });
      });

      // Handle phone obfuscation
      const phoneElements = document.querySelectorAll(".obfuscated-phone");
      phoneElements.forEach((element) => {
        element.addEventListener("click", function () {
          const phone = this.getAttribute("data-phone");
          if (phone) {
            this.textContent = phone;
            this.classList.remove("obfuscated-phone");
            this.removeAttribute("data-phone");

            // Optional: Create a tel link
            const link = document.createElement("a");
            link.href = "tel:" + phone.replace(/\s/g, "");
            link.textContent = phone;
            this.parentNode.replaceChild(link, this);
          }
        });
      });
    });
  </script>
</Base>
