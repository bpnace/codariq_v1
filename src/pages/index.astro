  ogImage="https://codariq.de/images/hero/hero2.webp"
>
  <!-- Structured Data -->
  <BreadcrumbSchema />

  <!-- Hero Section -->
  <Hero
    secondaryCTA="Automatisierungs-Check"
    secondaryCTALink="/automatisierungs-check"
  />

  <!-- Trust Bar -->
  <TrustBar />

  <!-- Pain Points -->
  <PainList />

  <!-- Process -->
  <Process />

  <!-- Benefits -->
  <Benefits />

  <!-- Testimonials -->
  <Testimonials />

  <!-- Final CTA -->
  <FinalCTA />

  <!-- Blog Preview -->
  <BlogPreview />
</Base>
