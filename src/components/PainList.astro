---
export interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Diese Probleme kennen Sie",
  subtitle = "Ihr Team verliert täglich wertvolle Zeit mit Routineaufgaben, die KI übernehmen könnte",
} = Astro.props;

const problems = [
  {
    title: "Support-Postfach",
    description:
      "E-Mails stapeln sich, Standardfragen kosten 2-3h täglich, Kunden warten zu lange.",
    solution: "KI sortiert vor und antwortet",
    icon: "mail",
  },
  {
    title: "Rechnungen & Dokumente",
    description:
      "Jede Rechnung manuell prüfen, abtippen, ablegen machen 30min mehr pro Rechnung aus.",
    solution: "KI liest aus und bucht automatisch",
    icon: "document",
  },
  {
    title: "Verstreutes Wissen",
    description:
      "Antworten in Anhängen, Mails, PDFs und die gleichen Fragen immer wieder.",
    solution: "KI durchsucht alles und antwortet",
    icon: "book",
  },
  {
    title: "Tool-Flickenteppich",
    description:
      "CRM, Ticketsystem, Buchhaltung aber nichts greift ineinander, Doppelarbeit.",
    solution: "KI verbindet alle Systeme",
    icon: "link",
  },
];
---

<section id="pain-points" class="py-12 sm:py-16 md:py-20 bg-gray-50">
  <div class="max-w-8xl mx-auto px-3 sm:px-4 md:px-6 lg:px-12 xl:px-16">
    <!-- Section Header -->
    <div class="text-center mb-10 sm:mb-12 md:mb-16 px-4">
      <h2
        class="text-2xl sm:text-3xl md:text-4xl font-black text-gray-900 mb-3 sm:mb-4 animate-on-scroll"
      >
        {title}
      </h2>
      <p
        class="text-base sm:text-lg md:text-xl font-light text-gray-600 max-w-3xl mx-auto leading-relaxed animate-on-scroll"
        style="transition-delay: 0.15s"
      >
        {subtitle}
      </p>
    </div>

    <!-- Problem Cards Grid -->
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-5 md:gap-6 max-w-7xl mx-auto px-2 sm:px-3 md:px-4"
    >
      {
        problems.map((problem, index) => (
          <div
            class="group animate-fade-in-up"
            style={`animation-delay: ${(index + 1) * 150}ms`}
          >
            <div class="bg-white rounded-xl p-4 sm:p-5 md:p-6 shadow-sm hover:shadow-md transition-all duration-300 border border-gray-200 h-full flex flex-col">
              {/* Icon */}
              <div class="mb-3 sm:mb-4">
                <div class="w-10 h-10 sm:w-12 sm:h-12 bg-red-50 rounded-lg sm:rounded-xl flex items-center justify-center group-hover:bg-red-100 transition-colors duration-300">
                  {problem.icon === "mail" && (
                    <svg
                      class="w-5 h-5 sm:w-6 sm:h-6 text-red-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <title>Email Icon</title>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      />
                    </svg>
                  )}
                  {problem.icon === "document" && (
                    <svg
                      class="w-5 h-5 sm:w-6 sm:h-6 text-red-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <title>Document Icon</title>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                      />
                    </svg>
                  )}
                  {problem.icon === "users" && (
                    <svg
                      class="w-5 h-5 sm:w-6 sm:h-6 text-orange-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <title>Users Icon</title>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                      />
                    </svg>
                  )}
                  {problem.icon === "book" && (
                    <svg
                      class="w-5 h-5 sm:w-6 sm:h-6 text-red-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <title>Book Icon</title>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                      />
                    </svg>
                  )}
                  {problem.icon === "chart" && (
                    <svg
                      class="w-5 h-5 sm:w-6 sm:h-6 text-orange-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <title>Chart Icon</title>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
                      />
                    </svg>
                  )}
                  {problem.icon === "graph" && (
                    <svg
                      class="w-5 h-5 sm:w-6 sm:h-6 text-orange-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <title>Graph Icon</title>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                      />
                    </svg>
                  )}
                  {problem.icon === "link" && (
                    <svg
                      class="w-5 h-5 sm:w-6 sm:h-6 text-red-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <title>Link Icon</title>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                      />
                    </svg>
                  )}
                </div>
              </div>

              {/* Content */}
              <div class="mb-3 sm:mb-4 flex-1">
                <h3 class="text-base sm:text-lg font-black text-gray-900 mb-2 sm:mb-3">
                  {problem.title}
                </h3>
                <p class="text-sm sm:text-base font-light text-gray-600 leading-relaxed mb-3">
                  {problem.description}
                </p>
              </div>

              {/* Solution */}
              <div class="pt-3 border-t border-gray-100">
                <p class="text-sm sm:text-base font-semibold text-orange-600 flex items-start gap-2">
                  <span class="flex-shrink-0">→</span>
                  <span>{problem.solution}</span>
                </p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  /* Intersection Observer will add is-visible class */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(20px);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out;
  }

  .animate-on-scroll.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>
