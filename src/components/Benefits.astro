---
export interface Props {
  title?: string;
  subtitle?: string;
  benefits?: Array<{
    title: string;
    description: string;
    icon: string;
    features: string[];
    highlight?: boolean;
    price?: string;
    duration?: string;
    isProduct?: boolean;
    additionalInfo?: string;
    colorTheme?: string;
  }>;
  additionalServices?: Array<{
    title: string;
    subtitle: string;
    description: string;
    features: string[];
    note?: string;
    price: string;
    duration: string;
    icon: string;
    comingSoon?: boolean;
  }>;
}

const {
  title = "Unsere Pakete",
  subtitle = "Du bekommst einen klaren Rahmen für Umfang und Kosten. Die Umsetzung wird immer an deinen Ablauf angepasst. Wir kümmern uns um Datenschutz und saubere Abläufe.",
  benefits = [
    {
      title: "Starter Paket",
      description:
        "Für Selbstständige und kleine Teams, die einen Ablauf spürbar entlasten wollen. Auch wenn du allein bist: Automationen übernehmen Aufgaben wie ein zusätzliches Teammitglied.",
      icon: "starter",
      features: [
        "1 klarer Ablauf, den wir gemeinsam auswählen",
        "Anbindung an deine vorhandenen Tools",
        "Saubere Regeln für Sonderfälle, damit nichts verloren geht",
        "Kurze Doku, damit du den Überblick behältst",
        "Optional: Betreuung ab 25 € pro Monat",
      ],
      price: "ab 399 €",
      duration: "einmalig",
      isProduct: true,
      additionalInfo: "Einen bereich oder Prozess zu automatisieren",
      colorTheme: "green",
    },
    {
      title: "Team Paket",
      description:
        "Für Selbstständige und kleine Teams, die mehrere Abläufe verbinden wollen, ohne dass es kompliziert wird. Deine Automationen und Agenten arbeiten wie ein eingespieltes Team im Hintergrund.",
      icon: "growth",
      features: [
        "Bis zu 3 Abläufe, die zusammen funktionieren",
        "Automatische Übergaben zwischen deinen Tools",
        "Tests mit echten Beispielen aus deinem Alltag",
        "Einweisung, damit du und dein Team direkt damit arbeiten könnt",
        "Optional: Betreuung ab 59€ pro Monat",
      ],
      price: "ab 1.499 €",
      duration: "einmalig",
      highlight: true,
      isProduct: true,
      additionalInfo: "Mehrere Abläufe zu einem System zu verbinden",
      colorTheme: "blue",
    },
    {
      title: "Wachstums Paket",
      description:
        "Für Selbstständige und Teams bis 50 Personen, die einen Bereich stabil und dauerhaft automatisieren wollen. So schaffst du mehr Volumen, ohne ständig neue Leute zu brauchen.",
      icon: "scale",
      features: [
        "Ein kompletter Bereich, zum Beispiel Support, Backoffice oder Vertrieb",
        "Klare Regeln und Zugriffsschutz",
        "Auswertung, ob es wirklich Zeit spart",
        "Begleitung in den ersten Wochen, bis es zuverlässig läuft",
        "Optional: Betreuung ab 99€ pro Monat",
      ],
      price: "ab 3.499 €",
      duration: "einmalig",
      isProduct: true,
      additionalInfo: "Einen kompletten Bereich zu automatisieren",
      colorTheme: "purple",
    },
  ],
  additionalServices = [
    {
      title: "Jedes mal mit dabei",
      subtitle: "",
      description:
        "Damit du dich nicht durch Technik kämpfen musst sind diese Punkte immer inklusive, egal welches Paket du nimmst.",
      features: [
        "Klarer Startpunkt: Wir wählen gemeinsam den Bereich oder Prozess mit dem größten Zeitlichen Aufwand",
        "Fester Plan: Du weißt vorher, was passiert, wann es fertig ist und was du am Ende bekommst",
        "Datenschutz sauber gelöst: Zugriffe, Datenfluss und Freigaben sind klar geregelt",
        "Tests mit echten Beispielen: Wir prüfen mit deinen Fällen, nicht mit Theorie",
        "Verständliche Übergabe: Kurze Doku und Überblick, damit du nicht abhängig bist",
        "Verlässlicher Betrieb: Wir bauen so, dass Sonderfälle abgefangen werden und nichts untergeht",
      ],
      note: "Du musst kein IT Wissen mitbringen. Wir erarbeiten zusammen das Ziel und kümmern uns um den Rest.",
      price: "",
      duration: "",
      icon: "included",
    },
  ],
} = Astro.props;
---

<section id="benefits" class="py-12 sm:py-16 md:py-20 bg-gray-50">
  <div class="max-w-8xl mx-auto px-3 sm:px-4 md:px-6 lg:px-12 xl:px-16">
    <!-- Section Header -->
    <div class="text-center mb-10 sm:mb-12 md:mb-16 px-4">
      <h2
        class="section-title mb-3 sm:mb-4 animate-on-scroll"
      >
        {title}
      </h2>
      <p
        class="section-subtitle max-w-3xl mx-auto animate-on-scroll"
        style="transition-delay: 0.15s"
      >
        {subtitle}
      </p>
    </div>

    <!-- Bento Box Grid -->
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 max-w-6xl mx-auto px-2 sm:px-3 md:px-4"
    >
      {
        benefits.map((benefit, index) => {
          // Theme configuration map for cleaner logic
          const THEME_CONFIG = {
            blue: {
              cardStyle: "background: linear-gradient(135deg, var(--color-pack-blue), var(--color-neutral-gray-900)); border-color: var(--color-pack-blue);",
              iconWrapperStyle: "background: var(--color-neutral-gray-100);",
              iconWrapperClass: "bg-white/10"
            },
            default: {
              cardStyle: "background: linear-gradient(135deg, var(--color-brand-light), var(--color-brand-dark)); border-color: var(--color-brand-light);",
              iconWrapperStyle: undefined,
              iconWrapperClass: "bg-white/10"
            }
          };

          const isTeamTier = benefit.colorTheme === "blue" || benefit.icon === "growth";
          const theme = benefit.highlight ? (isTeamTier ? "blue" : "default") : null;

          const cardStyle = theme ? THEME_CONFIG[theme].cardStyle : undefined;
          const iconWrapperStyle = theme ? THEME_CONFIG[theme].iconWrapperStyle : undefined;
          const iconWrapperThemeClasses = benefit.highlight
            ? (theme ? THEME_CONFIG[theme].iconWrapperClass : "bg-white/10")
            : "bg-gray-100";

          return (
            <div
              class={`relative group animate-fade-in-up`}
              style={`animation-delay: ${(index + 1) * 150}ms`}
            >
              {/* Bento Card */}
              <div
                style={cardStyle}
                class={`
            ${benefit.highlight ? "text-white" : "bg-white border-gray-200"} rounded-xl sm:rounded-2xl p-4 sm:p-6 shadow-sm hover:shadow-md border h-full flex flex-col transition-all duration-300 relative
          `}
              >

                {/* Icon */}
                <div class="mb-3 sm:mb-4">
                  <div
                    style={iconWrapperStyle}
                    class={`
                w-10 h-10 sm:w-12 sm:h-12 rounded-lg sm:rounded-xl flex items-center justify-center transition-all duration-300
                ${iconWrapperThemeClasses}
              `}
                  >
                    {benefit.icon === "starter" && (
                      <svg
                        style={benefit.highlight ? undefined : "color: var(--color-pack-green);"}
                        class={`w-5 h-5 sm:w-6 sm:h-6 ${benefit.highlight ? "text-white" : ""} transition-colors`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <title>Einsteiger-Paket Icon</title>
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M13 10V3L4 14h7v7l9-11h-7z"
                        />
                      </svg>
                    )}

                    {benefit.icon === "growth" && (
                      <svg
                        style={
                          isTeamTier
                            ? "color: var(--color-pack-blue);"
                            : benefit.highlight
                              ? undefined
                              : "color: var(--color-package-team-icon);"
                        }
                        class={`w-5 h-5 sm:w-6 sm:h-6 ${benefit.highlight && !isTeamTier ? "text-white" : ""} transition-colors`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <title>Standard-Paket Icon</title>
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
                        />
                      </svg>
                    )}

                    {benefit.icon === "scale" && (
                      <svg
                        style={
                          benefit.highlight ? undefined : "color: var(--color-package-growth-icon);"
                        }
                        class={`w-5 h-5 sm:w-6 sm:h-6 ${benefit.highlight ? "text-white" : ""} transition-colors`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <title>Umfangreiches Paket Icon</title>
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"
                        />
                      </svg>
                    )}

                    {benefit.icon === "enterprise" && (
                      <svg
                        style={benefit.highlight ? undefined : "color: var(--color-pack-purple);"}
                        class={`w-5 h-5 sm:w-6 sm:h-6 ${benefit.highlight ? "text-white" : ""} transition-colors`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <title>Enterprise-Lösung Icon</title>
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                        />
                      </svg>
                    )}
                  </div>
                </div>

                {/* Content */}
                <div class="mb-3 sm:mb-4 flex-1">
                  <h3
                    class={`text-lg sm:text-xl font-black leading-tight mb-2 ${benefit.highlight ? "text-white" : "text-gray-900"}`}
                  >
                    {benefit.title}
                  </h3>
                  <p
                    class={`text-sm sm:text-base font-medium leading-relaxed mb-3 sm:mb-4 ${benefit.highlight ? "text-white/85" : "text-gray-600"}`}
                  >
                    {benefit.description}
                  </p>
                </div>

                {/* Features List */}
                <div class="space-y-1 sm:space-y-2 mb-4">
                  {benefit.features.map((feature) => {
                    const isOptional = feature.startsWith("Optional");
                    const optionalRest = isOptional ? feature.slice("Optional".length) : "";
                    return (
                      <div class="flex items-center gap-2">
                      <div
                        class={`w-1 h-1 sm:w-1.5 sm:h-1.5 rounded-full flex-shrink-0 ${benefit.highlight ? "bg-white/60" : "bg-gray-400"}`}
                      />
                      <span
                        class={`text-sm font-medium ${benefit.highlight ? "text-white/75" : "text-gray-600"}`}
                      >
                        {isOptional ? (
                          <>
                            <span class="font-black">Optional</span>
                            {optionalRest}
                          </>
                        ) : (
                          feature
                        )}
                      </span>
                    </div>
                    );
                  })}
                </div>

                {/* Pricing & CTA for Products */}
                {benefit.isProduct && (
                  <div class={`mt-auto pt-4 border-t ${benefit.highlight ? "border-white/20" : "border-gray-200"}`}>
                    {/* Duration Badge */}
                    <div class="flex items-center gap-2 mb-3">
                      <svg
                        class={`w-3 h-3 sm:w-4 sm:h-4 ${benefit.highlight ? "text-white/70" : "text-gray-500"}`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                      </svg>
                      <span
                        class={`text-sm font-medium ${benefit.highlight ? "text-white/75" : "text-gray-600"}`}
                      >
                        {benefit.duration}
                      </span>
                    </div>

                    {/* Pricing */}
                    <div class="flex flex-col mb-3">
                      <div
                        class={`text-lg font-black ${benefit.highlight ? "text-white" : "text-gray-900"}`}
                      >
                        {benefit.price}
                      </div>
                      {benefit.additionalInfo && (
                        <div
                          class={`text-sm mt-3 pt-3 border-t ${benefit.highlight ? "border-white/20 text-white/85" : "border-gray-200 text-gray-600"}`}
                        >
                          <span class="font-semibold">Ideal um:</span>{" "}
                          {benefit.additionalInfo}
                        </div>
                      )}
                    </div>

                    {/* CTA Button */}
                    <a
                      href="/#final-cta"
                      class={`
                    w-full px-4 py-2.5 rounded-lg font-medium text-base shadow-sm transition-all duration-200 text-center inline-block cta-button
                    ${
                      benefit.highlight
                        ? "bg-white text-gray-900 hover:bg-gray-100"
                        : "bg-gray-200 text-gray-800 hover:bg-gray-300"
                    }
                  `}
                      aria-label={`${benefit.title} ${benefit.price === "auf Anfrage" ? "anfragen" : "starten"} - Zum Kontaktformular springen`}
                    >
                      {benefit.price === "auf Anfrage" ? "Jetzt anfragen" : "Jetzt starten"}
                    </a>
                  </div>
                )}
              </div>
            </div>
          );
        })
      }
    </div>

    <!-- Additional Services Section -->
    <div class="mt-12 sm:mt-16 md:mt-20">
      <!-- Additional Services -->
      <div class="max-w-5xl mx-auto">
        <div class="grid grid-cols-1 gap-6 mb-12">
          {
            additionalServices.map((service) => {
              // Included features card - Enhanced prominence
              if (service.icon === "included") {
                return (
                  <div>
                    <div class="bg-white rounded-2xl p-6 sm:p-8 shadow-sm border border-gray-200 max-w-4xl mx-auto text-center">
                      <h4 class="content-title mb-2">{service.title}</h4>
                      <p class="content-subtitle max-w-3xl mx-auto">
                        {service.description}
                      </p>

                      <div class="mt-6 sm:mt-8 grid grid-cols-1 sm:grid-cols-2 gap-3 text-left">
                        {service.features.map((feature) => {
                          const [lead, ...restParts] = feature.split(":");
                          const rest = restParts.join(":").trim();
                          return (
                            <div class="flex items-start gap-3 bg-gray-50 rounded-xl p-4 border border-gray-200">
                              <div class="w-6 h-6 rounded-lg bg-white border border-gray-200 flex items-center justify-center flex-shrink-0 mt-0.5">
                                <svg
                                  class="w-3.5 h-3.5 text-emerald-600"
                                  fill="none"
                                  stroke="currentColor"
                                  viewBox="0 0 24 24"
                                >
                                  <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="3"
                                    d="M5 13l4 4L19 7"
                                  />
                                </svg>
                              </div>
                              <div class="text-sm sm:text-base font-medium text-gray-700 leading-snug">
                                <span class="font-black text-gray-900">
                                  {lead.trim()}
                                </span>
                                {rest ? `: ${rest}` : ""}
                              </div>
                            </div>
                          );
                        })}
                      </div>

                      {service.note && (
                        <p class="mt-6 sm:mt-8 body-muted max-w-3xl mx-auto">
                          {service.note}
                        </p>
                      )}
                    </div>
                  </div>
                );
              }

              return null;
            })
          }
        </div>
      </div>
    </div>
  </div>
</section>
