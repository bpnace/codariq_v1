                    {benefit.icon === "enterprise" && (
                      <svg
                        class={`w-5 h-5 sm:w-6 sm:h-6 ${benefit.highlight ? "text-white" : "text-gray-300"} transition-colors`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <title>Enterprise-Lösung Icon</title>
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                        />
                      </svg>
                    )}
                  </div>
                </div>

                {/* Content */}
                <div class="mb-3 sm:mb-4 flex-1">
                  <h3
                    class={`text-base sm:text-l font-bold mb-2 ${benefit.highlight ? "text-white" : "text-gray-900"}`}
                  >
                    {benefit.title}
                  </h3>
                  <p
                    class={`text-m sm:text-m leading-relaxed mb-3 sm:mb-4 ${benefit.highlight ? "text-white/80" : "text-gray-600"}`}
                  >
                    {benefit.description}
                  </p>
                </div>

                {/* Features List */}
                <div class="space-y-1 sm:space-y-2 mb-4">
                  {benefit.features.map((feature) => (
                    <div class="flex items-center gap-2">
                      <div
                        class={`w-1 h-1 sm:w-1.5 sm:h-1.5 rounded-full flex-shrink-0 ${benefit.highlight ? "bg-white/60" : "bg-gray-400"}`}
                      />
                      <span
                        class={`text-xs ${benefit.highlight ? "text-white/70" : "text-gray-500"}`}
                      >
                        {feature}
                      </span>
                    </div>
                  ))}
                </div>

                {/* Pricing & CTA for Products */}
                {benefit.isProduct && (
                  <div class="mt-auto pt-4 border-t border-gray-200">
                    {/* Duration Badge */}
                    <div class="flex items-center gap-2 mb-3">
                      <svg
                        class={`w-3 h-3 sm:w-4 sm:h-4 ${benefit.highlight ? "text-white/70" : "text-gray-500"}`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                      </svg>
                      <span
                        class={`text-xs font-medium ${benefit.highlight ? "text-white/70" : "text-gray-600"}`}
                      >
                        {benefit.duration}
                      </span>
                    </div>

                    {/* Pricing */}
                    <div class="flex flex-col mb-3">
                      <div
                        class={`text-lg font-bold ${benefit.highlight ? "text-white" : "text-gray-900"}`}
                      >
                        {benefit.price}
                      </div>
                      {benefit.additionalInfo && (
                        <div
                          class={`text-xs mt-3 pt-3 border-t ${benefit.highlight ? "border-white/20 text-white/80" : "border-gray-200 text-gray-600"}`}
                        >
                          <span class="font-semibold">Ideal für:</span>{" "}
                          {benefit.additionalInfo}
                        </div>
                      )}
                    </div>

                    {/* CTA Button */}
                    <a
                      href="/#final-cta"
                      class={`
                    w-full px-4 py-2 rounded-lg font-medium text-sm shadow-sm transition-all duration-200 text-center inline-block cta-button
                    ${
                      benefit.highlight
                        ? "bg-white text-gray-900 hover:bg-gray-100"
                        : "bg-gray-200 text-gray-800 hover:bg-gray-300"
                    }
                  `}
                      aria-label={`${benefit.title} ${benefit.price === "auf Anfrage" ? "anfragen" : "starten"} - Zum Kontaktformular springen`}
                    >
                      {benefit.price === "auf Anfrage" ? "Jetzt anfragen" : "Jetzt starten"}
                    </a>
                  </div>
                )}
              </div>
            </div>
          );
        })
      }
    </div>

    <!-- Additional Services Section -->
    <div class="mt-12 sm:mt-16 md:mt-20">
      <!-- Additional Services -->
      <div class="max-w-5xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
          {
            additionalServices.map((service, index) => {
              // Included features card - Enhanced prominence
              if (service.icon === "included") {
                return (
                  <div class="bg-white rounded-2xl p-8 md:p-10 shadow-md border-2 border-gray-200 h-full flex flex-col">
                    {/* Enhanced Title Section */}
                    <div class="text-center mb-6">
                      <h4 class="text-2xl font-bold text-gray-900 mb-2">
                        {service.title}
                      </h4>
                      <p class="text-base text-gray-600">
                        Unabhängig vom gewählten Paket erhalten Sie diese Leistungen als Standard
                      </p>
                    </div>

                    {/* Features with enhanced cards */}
                    <div class="space-y-3">
                      {service.features.map((feature) => (
                        <div class="flex items-start gap-3 bg-gray-50 rounded-lg p-3 hover:bg-gray-100 transition-all duration-200">
                          <div class="w-5 h-5 bg-white rounded flex items-center justify-center border border-gray-200 flex-shrink-0 mt-0.5">
                            <svg class="w-3 h-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                            </svg>
                          </div>
                          <span class="text-sm text-gray-700 font-medium">{feature}</span>
                        </div>
                      ))}
                    </div>
                  </div>
                );
              }

              // Special design for Live-Dashboard with waitlist form
              if (service.title === "Live-Dashboard") {
                return (
                  <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200 h-full flex flex-col">
                    {/* Icon & Title */}
                    <div class="flex items-center gap-3 mb-3">
                      <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
                        <svg
                          class="w-5 h-5 text-gray-600"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <title>Live Dashboard Icon</title>
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                          />
                        </svg>
                      </div>
                      <div class="flex-1">
                        <h4 class="text-lg font-bold text-gray-900">
                          {service.title}
                        </h4>
                        <span class="text-xs text-gray-500">
                          {service.subtitle}
                        </span>
                      </div>
                    </div>

                    {/* Description */}
                    <p class="text-sm text-gray-600 mb-4">
                      {service.description}
                    </p>

                    {/* Waitlist Form */}
                    <div class="mt-auto">
                      <form id="dashboard-waitlist-form" class="flex gap-2">
                        <input
                          type="email"
                          id="dashboard-email"
                          name="email"
                          placeholder="E-Mail-Adresse"
                          required
                          class="flex-1 px-3 py-2 text-sm border border-gray-300 bg-white text-gray-900 placeholder-gray-400 rounded-lg focus:ring-1 focus:ring-gray-400 focus:border-gray-400 outline-none transition-all duration-200"
                        />
                        <button
                          type="submit"
                          class="bg-gradient-to-br from-orange-500 to-orange-700 text-white px-4 py-2 rounded-lg hover:from-orange-600 hover:to-orange-800 transition-all duration-200 text-sm shadow-lg cta-button whitespace-nowrap"
                          aria-label="Zur Warteliste für KI-Dashboard anmelden"
                        >
                          Beitreten
                        </button>
                      </form>

                        {/* Success Message */}
                        <div
                          id="dashboard-success"
                          class="hidden mt-2 p-3 bg-green-50 border border-green-200 rounded-lg"
                        >
                          <div class="flex items-center gap-2">
                            <svg
                              class="w-4 h-4 text-green-600"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"
                              />
                            </svg>
                            <div>
                              <p class="font-medium text-green-800 text-sm">
                                Erfolgreich angemeldet!
                              </p>
                              <p class="text-green-600 text-xs">
                                Sie erhalten eine Bestätigungs-E-Mail
                              </p>
                            </div>
                          </div>
                        </div>

                        {/* Error Message */}
                        <div
                          id="dashboard-error"
                          class="hidden mt-2 p-3 bg-red-50 border border-red-200 rounded-lg"
                        >
                          <div class="flex items-center gap-2">
                            <svg
                              class="w-4 h-4 text-red-600"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                              />
                            </svg>
                            <div>
                              <p class="font-medium text-red-800 text-sm">
                                Fehler bei der Anmeldung
                              </p>
                              <p
                                id="dashboard-error-text"
                                class="text-red-600 text-xs"
                              >
                                Bitte versuchen Sie es erneut
                              </p>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                );
              }

              return null;
            })
          }
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const dashboardForm = document.getElementById(
      "dashboard-waitlist-form",
    ) as HTMLFormElement | null;
    const emailInput = document.getElementById(
      "dashboard-email",
    ) as HTMLInputElement | null;
    const successMessage = document.getElementById(
      "dashboard-success",
    ) as HTMLElement | null;
    const errorMessage = document.getElementById(
      "dashboard-error",
    ) as HTMLElement | null;
    const errorText = document.getElementById(
      "dashboard-error-text",
    ) as HTMLElement | null;
    const submitButton = dashboardForm?.querySelector(
      'button[type="submit"]',
    ) as HTMLButtonElement | null;

    if (
      !dashboardForm ||
      !emailInput ||
      !successMessage ||
      !errorMessage ||
      !submitButton ||
      !errorText
    ) {
      console.warn("KI-Dashboard waitlist form elements not found");
      return;
    }

    // Email validation function
    function isValidEmail(email: string): boolean {
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return emailRegex.test(email);
    }

    // Hide messages function
    function hideMessages(): void {
      if (successMessage) successMessage.classList.add("hidden");
      if (errorMessage) errorMessage.classList.add("hidden");
    }

    // Show loading state
    function setLoading(loading: boolean): void {
      if (!submitButton) return;

      if (loading) {
        submitButton.disabled = true;
        submitButton.textContent = "Wird gesendet...";
      } else {
        submitButton.disabled = false;
        submitButton.textContent = "Warteliste beitreten";
      }
    }

    // Handle form submission
    dashboardForm.addEventListener("submit", async function (e) {
      e.preventDefault();

      const email = emailInput.value.trim();

      // Hide previous messages
      hideMessages();

      // Validate email
      if (!email) {
        errorMessage.classList.remove("hidden");
        errorText.textContent = "Bitte geben Sie eine E-Mail-Adresse ein";
        emailInput.focus();
        return;
      }

      if (!isValidEmail(email)) {
        errorMessage.classList.remove("hidden");
        errorText.textContent =
          "Bitte geben Sie eine gültige E-Mail-Adresse ein";
        emailInput.focus();
        return;
      }

      // Set loading state
      setLoading(true);

      try {
        // Send data to n8n webhook with Basic Auth
        const response = await fetch(
          "https://automation.codariq.de/webhook/179939e2-cef1-4b9f-b513-272b356d7e57",
          {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
              Authorization: "Basic " + btoa("admin:razxoc-kYzxow-jejbu9"),
            },
            body: JSON.stringify({
              email: email,
              body: {
                email: email,
                timestamp: new Date().toISOString(),
                userAgent: navigator.userAgent,
              },
            }),
          },
        );

        // Parse the response content
        const responseData = await response.text();
        let responseJson: any = {};

        try {
          responseJson = JSON.parse(responseData);
        } catch (e) {
          // If it's not JSON, treat as plain text
          responseJson = { message: responseData };
        }

        // Handle different response scenarios based on status and HTTP code
        if (
          response.status === 201 &&
          responseJson.status === "ok" &&
          responseJson.action === "subscribed"
        ) {
          // HTTP 201 - Success: Email added to waitlist
          successMessage.classList.remove("hidden");
          dashboardForm.reset();

          // Auto-hide success message after 5 seconds
          setTimeout(() => {
            successMessage.classList.add("hidden");
          }, 5000);
        } else if (
          response.status === 200 &&
          responseJson.status === "ok" &&
          responseJson.action === "already_subscribed"
        ) {
          // HTTP 200 - Already exists: Email already on waitlist
          errorMessage.classList.remove("hidden");
          errorText.textContent =
            "Diese E-Mail-Adresse ist bereits in der Warteliste registriert.";

          // Auto-hide error message after 5 seconds
          setTimeout(() => {
            errorMessage.classList.add("hidden");
          }, 5000);
        } else if (
          response.status === 400 &&
          responseJson.status === "error" &&
          responseJson.code === "MISSING_EMAIL"
        ) {
          // HTTP 400 - Missing email
          errorMessage.classList.remove("hidden");
          errorText.textContent = "E-Mail-Adresse ist erforderlich.";

          // Auto-hide error message after 5 seconds
          setTimeout(() => {
            errorMessage.classList.add("hidden");
          }, 5000);
        } else if (!response.ok) {
          // Handle other HTTP errors
          let errorMsg = responseJson.message || response.statusText;

          // Handle specific error cases
          if (
            typeof responseData === "string" &&
            responseData.includes("Authorization data is wrong")
          ) {
            errorMsg =
              "Webhook-Konfigurationsfehler. Bitte kontaktieren Sie den Support.";
          }

          throw new Error(`HTTP ${response.status}: ${errorMsg}`);
        } else if (response.ok && responseJson.status === "ok") {
          // Handle any other successful responses that we didn't explicitly handle above
          successMessage.classList.remove("hidden");
          dashboardForm.reset();

          // Auto-hide success message after 5 seconds
          setTimeout(() => {
            successMessage.classList.add("hidden");
          }, 5000);
        } else {
          // Unexpected response format only for non-successful cases
          throw new Error(
            responseJson.message || "Unbekannte Antwort vom Server.",
          );
        }
      } catch (error: any) {
        console.error("Error submitting dashboard waitlist form:", error);
        errorMessage.classList.remove("hidden");
        errorText.textContent =
          error.message ||
          "Ein Fehler ist aufgetreten. Bitte versuchen Sie es später erneut.";
      } finally {
        // Reset loading state
        setLoading(false);
      }
    });

    // Clear messages when user starts typing
    emailInput.addEventListener("input", function () {
      if (
        !successMessage.classList.contains("hidden") ||
        !errorMessage.classList.contains("hidden")
      ) {
        hideMessages();
      }
    });
  });
</script>

