        "Echtzeit-Dashboards für alle KI-Workflows",
        "Automatisches Monitoring: Fehler, Latenzen, Durchlaufzeiten",
        "Frühwarnsystem bei Qualitätsabfall",
        "KPI-Reports für Management & Teams",
      ],
      price: "auf Anfrage",
      duration: "monatlich",
      icon: "dashboard",
      comingSoon: true,
    },
    {
      title: "Wartungs- & Weiterentwicklungs-Paket",
      subtitle: "Betrieb & Weiterentwicklung",
      description:
        "Ihre Lösung bleibt stabil, sicher und lernt mit. Fehler werden nicht nur behoben – das System verbessert sich kontinuierlich.",
      features: [
        "Garantierte Reaktionszeiten (SLA)",
        "Proaktive Optimierung & Modell-Feintuning",
        "Kontinuierliche Qualitätskontrolle & Monitoring",
        "Fester Ansprechpartner",
        "Enthält bis zu 8 Support-/Optimierungsstunden pro Monat",
        "Leistungen darüber hinaus nach Bedarf zubuchbar",
      ],
      price: "ab €2.500/Monat",
      duration: "flexible Laufzeit",
      icon: "maintenance",
    },
  ],
} = Astro.props;
---

<section id="benefits" class="py-12 sm:py-16 md:py-20 bg-gray-50">
  <div class="max-w-8xl mx-auto px-3 sm:px-4 md:px-6 lg:px-12 xl:px-16">
    <!-- Section Header -->
    <div class="text-center mb-10 sm:mb-12 md:mb-16 px-4">
      <h2
        class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-3 sm:mb-4 animate-on-scroll"
      >
        {title}
      </h2>
      <p
        class="text-base sm:text-lg md:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed animate-on-scroll"
        style="transition-delay: 0.15s"
      >
        {subtitle}
      </p>
    </div>

    <!-- Bento Box Grid -->
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4 md:gap-6 max-w-6xl mx-auto px-2 sm:px-3 md:px-4"
    >
      {
        benefits.map((benefit, index) => {
          // Three column layout: Each item spans 1 col on desktop, 2 cols on smaller screens
          const getGridClass = (idx: number) => {
            return "sm:col-span-1"; // Each card takes 1 column
          };

          return (
            <div
              class={`relative group animate-fade-in-up ${getGridClass(index)}`}
              style={`animation-delay: ${(index + 1) * 150}ms`}
            >
              {/* Bento Card */}
              <div
                class={`
            bg-white rounded-xl sm:rounded-2xl p-4 sm:p-6 shadow-sm hover:shadow-md border border-gray-200 h-full flex flex-col transition-all duration-300 relative
            ${benefit.highlight ? "bg-gradient-to-br from-gray-900 to-gray-800 text-white border-gray-700" : ""}
          `}
              >

                {/* Icon */}
                <div class="mb-3 sm:mb-4">
                  <div
                    class={`
                w-10 h-10 sm:w-12 sm:h-12 rounded-lg sm:rounded-xl flex items-center justify-center transition-all duration-300
                ${benefit.highlight ? "bg-white/10" : "bg-gray-100"}
              `}
                  >
                    {benefit.icon === "knowledge" && (
                      <svg
                        class={`w-5 h-5 sm:w-6 sm:h-6 ${benefit.highlight ? "text-white" : "text-gray-600"} transition-colors`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <title>Wissensmanagement Icon</title>
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                        />
                      </svg>
                    )}

                    {benefit.icon === "invoice" && (
                      <svg
                        class={`w-5 h-5 sm:w-6 sm:h-6 ${benefit.highlight ? "text-white" : "text-gray-600"} transition-colors`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <title>Rechnungsverarbeitung Icon</title>
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                        />
                      </svg>
                    )}

                    {benefit.icon === "support" && (
                      <svg
                        class={`w-6 h-6 ${benefit.highlight ? "text-white" : "text-gray-600"} transition-colors`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <title>Support & Helpdesk Icon</title>
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
                        />
                      </svg>
                    )}
                  </div>
                </div>

                {/* Content */}
                <div class="mb-3 sm:mb-4 flex-1">
                  <h3
                    class={`text-base sm:text-l font-bold mb-2 ${benefit.highlight ? "text-white" : "text-gray-900"}`}
                  >
                    {benefit.title}
                  </h3>
                  <p
                    class={`text-m sm:text-m leading-relaxed mb-3 sm:mb-4 ${benefit.highlight ? "text-white/80" : "text-gray-600"}`}
                  >
                    {benefit.description}
                  </p>
                </div>

                {/* Features List */}
                <div class="space-y-1 sm:space-y-2 mb-4">
                  {benefit.features.map((feature) => (
                    <div class="flex items-center gap-2">
                      <div
                        class={`w-1 h-1 sm:w-1.5 sm:h-1.5 rounded-full flex-shrink-0 ${benefit.highlight ? "bg-white/60" : "bg-gray-400"}`}
                      />
                      <span
                        class={`text-xs ${benefit.highlight ? "text-white/70" : "text-gray-500"}`}
                      >
                        {feature}
                      </span>
                    </div>
                  ))}
                </div>

                {/* Pricing & CTA for Products */}
                {benefit.isProduct && (
                  <div class="mt-auto pt-4 border-t border-gray-200">
                    {/* Duration Badge */}
                    <div class="flex items-center gap-2 mb-3">
                      <svg
                        class={`w-3 h-3 sm:w-4 sm:h-4 ${benefit.highlight ? "text-white/70" : "text-gray-500"}`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                      </svg>
                      <span
                        class={`text-xs font-medium ${benefit.highlight ? "text-white/70" : "text-gray-600"}`}
                      >
                        {benefit.duration}
                      </span>
                    </div>

                    {/* Pricing */}
                    <div class="flex flex-col mb-3">
                      <div
                        class={`text-lg font-bold ${benefit.highlight ? "text-white" : "text-gray-900"}`}
                      >
                        {benefit.price}
                      </div>
                      {benefit.additionalInfo && (
                        <span
                          class={`text-xs mt-1 ${benefit.highlight ? "text-white/70" : "text-gray-600"}`}
                        >
                          {benefit.additionalInfo}
                        </span>
                      )}
                    </div>

                    {/* CTA Button */}
                    <a
                      href="/#final-cta"
                      class={`
                    w-full px-4 py-2 rounded-lg font-medium text-sm shadow-sm transition-all duration-200 text-center inline-block cta-button
                    ${
                      benefit.highlight
                        ? "bg-white text-gray-900 hover:bg-gray-100"
                        : "bg-gray-200 text-gray-800 hover:bg-gray-300"
                    }
                  `}
                      aria-label={`${benefit.title} starten - Zum Kontaktformular springen`}
                    >
                      Jetzt starten
                    </a>
                  </div>
                )}
              </div>
            </div>
          );
        })
      }
    </div>

    <!-- Additional Services Section -->
    <div class="mt-12 sm:mt-16 md:mt-20">
      <div class="text-center mb-12">
        <h3
          class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4 animate-on-scroll"
        >
          Ergänzende Services
        </h3>
        <p
          class="text-lg text-gray-600 max-w-2xl mx-auto animate-on-scroll"
          style="transition-delay: 0.15s"
        >
          Erweitern Sie Ihre KI-Automatisierung mit zusätzlichen Services für
          maximalen Erfolg
        </p>
      </div>

      <!-- Additional Services -->
      <div class="max-w-5xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
          {
            additionalServices.map((service, index) => {
              // Special design for Live-Dashboard with waitlist form
              if (service.title === "Live-Dashboard: Automatisierung messbar machen") {
                return (
                  <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200 relative overflow-hidden h-full flex flex-col">
                    {/* Service Badge */}
                    <div class="absolute top-4 right-4">
                      <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-xs font-medium">
                        {service.subtitle}
                      </span>
                    </div>

                    {/* Icon */}
                    <div class="mb-4">
                      <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center">
                        <svg
                          class="w-6 h-6 text-gray-600"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <title>Live Dashboard Icon</title>
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                          />
                        </svg>
                      </div>
                    </div>

                    {/* Content */}
                    <div class="mb-4 flex-1 flex flex-col">
                      <div class="flex items-center gap-2 mb-2">
                        <h4 class="text-base sm:text-l font-bold text-gray-900">
                          {service.title}
                        </h4>
                        {service.comingSoon && (
                          <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs font-medium">
                            Verfügbar ab Q1 2025
                          </span>
                        )}
                      </div>
                      <p class="text-m sm:text-m text-gray-600 leading-relaxed mb-3 sm:mb-4">
                        {service.description}
                      </p>

                      {/* Features */}
                      <div class="space-y-1 sm:space-y-2 mb-4 flex-1">
                        {service.features.map((feature) => (
                          <div class="flex items-center gap-2">
                            <div class="w-1 h-1 sm:w-1.5 sm:h-1.5 bg-gray-400 rounded-full flex-shrink-0" />
                            <span class="text-xs text-gray-500">{feature}</span>
                          </div>
                        ))}
                      </div>

                      {/* Pricing & Duration */}
                      <div class="pt-4 border-t border-gray-200 mt-auto">
                        <div class="flex items-center justify-between mb-3">
                          <div class="text-lg font-bold text-gray-900">
                            {service.price}
                          </div>
                          <div class="flex items-center gap-1 text-xs text-gray-600">
                            <svg
                              class="w-3 h-3"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                              />
                            </svg>
                            {service.duration}
                          </div>
                        </div>

                        {/* Waitlist Form */}
                        <form id="dashboard-waitlist-form" class="flex gap-2">
                          <input
                            type="email"
                            id="dashboard-email"
                            name="email"
                            placeholder="Ihre E-Mail-Adresse"
                            required
                            class="flex-1 px-3 py-2 text-sm border border-gray-300 bg-white text-gray-900 placeholder-gray-500 rounded-lg focus:ring-2 focus:ring-blue-800 focus:border-blue-800 outline-none transition-all duration-200"
                          />
                          <button
                            type="submit"
                            class="bg-gradient-to-br from-gray-900 to-gray-800 text-white hover:from-gray-800 hover:to-gray-700 px-4 py-2 rounded-lg transition-all duration-200 font-medium text-sm shadow-sm cta-button whitespace-nowrap"
                            aria-label="Zur Warteliste für KI-Dashboard anmelden"
                          >
                            Warteliste beitreten
                          </button>
                        </form>

                        {/* Success Message */}
                        <div
                          id="dashboard-success"
                          class="hidden mt-2 p-3 bg-green-50 border border-green-200 rounded-lg"
                        >
                          <div class="flex items-center gap-2">
                            <svg
                              class="w-4 h-4 text-green-600"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"
                              />
                            </svg>
                            <div>
                              <p class="font-medium text-green-800 text-sm">
                                Erfolgreich angemeldet!
                              </p>
                              <p class="text-green-600 text-xs">
                                Sie erhalten eine Bestätigungs-E-Mail
                              </p>
                            </div>
                          </div>
                        </div>

                        {/* Error Message */}
                        <div
                          id="dashboard-error"
                          class="hidden mt-2 p-3 bg-red-50 border border-red-200 rounded-lg"
                        >
                          <div class="flex items-center gap-2">
                            <svg
                              class="w-4 h-4 text-red-600"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                              />
                            </svg>
                            <div>
                              <p class="font-medium text-red-800 text-sm">
                                Fehler bei der Anmeldung
                              </p>
                              <p
                                id="dashboard-error-text"
                                class="text-red-600 text-xs"
                              >
                                Bitte versuchen Sie es erneut
                              </p>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                );
              }

              // Default design for other services
              return (
                <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200 relative overflow-hidden h-full flex flex-col">
                  {/* Service Badge */}
                  <div class="absolute top-4 right-4">
                    <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-xs font-medium">
                      {service.subtitle}
                    </span>
                  </div>

                  {/* Icon */}
                  <div class="mb-4">
                    <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center">
                      {service.icon === "maintenance" && (
                        <svg
                          class="w-6 h-6 text-gray-600"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <title>Maintenance Retainer Icon</title>
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
