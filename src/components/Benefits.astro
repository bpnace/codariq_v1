---
export interface Props {
  title?: string;
  subtitle?: string;
  benefits?: Array<{
    title: string;
    description: string;
    icon: string;
    features: string[];
    highlight?: boolean;
    price?: string;
    duration?: string;
    isProduct?: boolean;
  }>;
}

const {
  title = "Unsere KI-Automatisierungs-Pakete",
  subtitle = "Von der ersten Analyse bis zur vollständigen Implementierung - wählen Sie das passende Paket für Ihren Erfolg",
  benefits = [
    {
      title: "AI Readiness Check",
      description: "Umfassende Analyse Ihrer Prozesse zur Identifikation der besten KI-Automatisierungsmöglichkeiten.",
      icon: "check",
      features: [
        "Detaillierte Prozessanalyse",
        "ROI-Kalkulation",
        "Machbarkeitsstudie",
        "Strategische Empfehlungen"
      ],
      price: "€999",
      duration: "1-2 Wochen",
      isProduct: true
    },
    {
      title: "Automation Pilot",
      description: "Vollständige Entwicklung und Implementierung einer maßgeschneiderten KI-Automatisierungslösung.",
      icon: "automation",
      features: [
        "Custom KI-Entwicklung",
        "Systemintegration",
        "Testing & Qualitätssicherung",
        "Go-Live Support"
      ],
      price: "€2.500 - €9.500",
      duration: "4-12 Wochen",
      highlight: true,
      isProduct: true
    },
    {
      title: "Integration & Migration",
      description: "Nahtlose Integration in Ihre bestehende IT-Infrastruktur ohne Unterbrechung des Betriebs.",
      icon: "integration",
      features: [
        "API-Konnektoren",
        "Cloud-Migration",
        "DSGVO-Ready",
        "Legacy-System Support"
      ]
    }
  ]
} = Astro.props;
---

<section id="benefits" class="py-12 sm:py-16 md:py-20 bg-gray-50">
  <div class="max-w-8xl mx-auto px-3 sm:px-4 md:px-6 lg:px-12 xl:px-16">
    
    <!-- Section Header -->
    <div class="text-center mb-10 sm:mb-12 md:mb-16 animate-slide-up px-4">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-3 sm:mb-4">
        {title}
      </h2>
      <p class="text-base sm:text-lg md:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    </div>

    <!-- Bento Box Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4 md:gap-6 max-w-6xl mx-auto px-2 sm:px-3 md:px-4">
      {benefits.map((benefit, index) => {
        // Three column layout: Each item spans 1 col on desktop, 2 cols on smaller screens
        const getGridClass = (idx) => {
          return 'sm:col-span-1'; // Each card takes 1 column
        };
        
        return (
        <div 
          class={`relative group animate-fade-in-up ${getGridClass(index)}`}
          style={`animation-delay: ${(index + 1) * 150}ms`}
        >
          <!-- Bento Card -->
          <div class={`
            bg-white rounded-xl sm:rounded-2xl p-4 sm:p-6 shadow-sm hover:shadow-md border border-gray-200 h-full flex flex-col transition-all duration-300
            ${benefit.highlight ? 'bg-gradient-to-br from-gray-900 to-gray-800 text-white border-gray-700' : ''}
          `}>
            
            <!-- Icon -->
            <div class="mb-3 sm:mb-4">
              <div class={`
                w-10 h-10 sm:w-12 sm:h-12 rounded-lg sm:rounded-xl flex items-center justify-center transition-all duration-300
                ${benefit.highlight ? 'bg-white/10' : 'bg-gray-100'}
              `}>
                {benefit.icon === 'check' && (
                  <svg class={`w-5 h-5 sm:w-6 sm:h-6 ${benefit.highlight ? 'text-white' : 'text-gray-600'} transition-colors`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                )}
                
                {benefit.icon === 'automation' && (
                  <svg class={`w-5 h-5 sm:w-6 sm:h-6 ${benefit.highlight ? 'text-white' : 'text-gray-600'} transition-colors`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                )}
                
                {benefit.icon === 'integration' && (
                  <svg class={`w-6 h-6 ${benefit.highlight ? 'text-white' : 'text-gray-600'} transition-colors`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                  </svg>
                )}
              </div>
            </div>

            <!-- Content -->
            <div class="mb-3 sm:mb-4 flex-1">
              <h3 class={`text-base sm:text-l font-bold mb-2 ${benefit.highlight ? 'text-white' : 'text-gray-900'}`}>
                {benefit.title}
              </h3>
              <p class={`text-m sm:text-m leading-relaxed mb-3 sm:mb-4 ${benefit.highlight ? 'text-white/80' : 'text-gray-600'}`}>
                {benefit.description}
              </p>
            </div>

            <!-- Features List -->
            <div class="space-y-1 sm:space-y-2 mb-4">
              {benefit.features.map((feature) => (
                <div class="flex items-center gap-2">
                  <div class={`w-1 h-1 sm:w-1.5 sm:h-1.5 rounded-full flex-shrink-0 ${benefit.highlight ? 'bg-white/60' : 'bg-gray-400'}`}></div>
                  <span class={`text-xs ${benefit.highlight ? 'text-white/70' : 'text-gray-500'}`}>
                    {feature}
                  </span>
                </div>
              ))}
            </div>

            <!-- Pricing & CTA for Products -->
            {benefit.isProduct && (
              <div class="mt-auto pt-4 border-t border-gray-200">
                {/* Duration Badge */}
                <div class="flex items-center gap-2 mb-3">
                  <svg class={`w-3 h-3 sm:w-4 sm:h-4 ${benefit.highlight ? 'text-white/70' : 'text-gray-500'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span class={`text-xs font-medium ${benefit.highlight ? 'text-white/70' : 'text-gray-600'}`}>
                    {benefit.duration}
                  </span>
                </div>

                {/* Pricing */}
                <div class="flex items-center justify-between mb-3">
                  <div class={`text-lg font-bold ${benefit.highlight ? 'text-white' : 'text-gray-900'}`}>
                    {benefit.price}
                  </div>
                </div>

                {/* CTA Button */}
                <a 
                  href="/#final-cta" 
                  class={`
                    w-full px-4 py-2 rounded-lg font-medium text-sm shadow-sm transition-all duration-200 text-center inline-block
                    ${benefit.highlight 
                      ? 'bg-white text-gray-900 hover:bg-gray-100' 
                      : 'bg-gradient-to-br from-orange-500 to-orange-700 text-white hover:from-orange-600 hover:to-orange-800'
                    }
                  `}
                >
                  Jetzt anfragen
                </a>
              </div>
            )}
          </div>
        </div>
      )})}
    </div>

  </div>
</section>

