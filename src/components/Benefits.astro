---
export interface Props {
  title?: string;
  subtitle?: string;
  benefits?: Array<{
    title: string;
    description: string;
    icon: string;
    features: string[];
    highlight?: boolean;
    price?: string;
    duration?: string;
    isProduct?: boolean;
    additionalInfo?: string;
  }>;
  additionalServices?: Array<{
    title: string;
    subtitle: string;
    description: string;
    features: string[];
    price: string;
    duration: string;
    icon: string;
    comingSoon?: boolean;
  }>;
}

const {
  title = "Unsere Lösungen",
  subtitle = "Bewährte KI-Systeme für Ihr Unternehmen. DSGVO-konform, betrieben in der EU oder On-Premises. Vom Go-Live bis zur Wartung – inklusive Team Training.",
  benefits = [
    {
      title: "Interner KI-Assistent für Wissensmanagement",
      description:
        "Mitarbeitende erhalten verlässliche Antworten mit Quellenangabe. Suchzeit sinkt, Entscheidungen werden schneller und sicherer.",
      icon: "knowledge",
      features: [
        "RAG Agent auf bestehendem Wissen",
        "Chat-Oberfläche in Langdock",
        "Rechte, Rollen & Audit Logs",
        "Team Training inbegriffen",
      ],
      price: "€39.000–€55.000",
      duration: "6–10 Wochen",
      isProduct: true,
      additionalInfo: "inkl. 3 Monate Basiswartung",
    },
    {
      title: "Automatisierte Rechnungsverarbeitung mit OCR & LLM",
      description:
        "Belege werden automatisch erkannt, geprüft, vorkontiert und ins ERP übergeben. Durchlaufzeiten sinken, Fehlerquoten sinken.",
      icon: "invoice",
      features: [
        "OCR & LLM Extraktion",
        "Validierung gegen Stammdaten",
        "Freigabe-Flows & Journal-Export",
        "Team Training inbegriffen",
      ],
      price: "€58.000–€78.000",
      duration: "8–14 Wochen",
      highlight: true,
      isProduct: true,
      additionalInfo: "inkl. 6 Monate Basiswartung",
    },
    {
      title: "KI-Ticketing-Agent für Support & Helpdesk",
      description:
        "Anfragen werden klassifiziert, zusammengefasst und häufig direkt beantwortet. Antwortzeit sinkt, First Contact Quote steigt.",
      icon: "support",
      features: [
        "LLM-Assistent mit Wissensbasis",
        "Integration in Zendesk, Freshdesk, OTRS und mehr",
        "Vorschläge mit Quellen",
        "Team Training inbegriffen",
      ],
      price: "€32.000–€49.000",
      duration: "5–9 Wochen",
      isProduct: true,
      additionalInfo: "inkl. 3 Monate Basiswartung",
    },
  ],
  additionalServices = [
    {
      title: "Live-Dashboard: Automatisierung messbar machen",
      subtitle: "Add-on für alle Produkte",
      description:
        "Sie sehen in Echtzeit, was Ihre KI-Automatisierungen leisten: Zeitersparnis, Ticket-Reduktion, Antwortgeschwindigkeit, Durchlaufzeiten, Qualität. Keine Bauchgefühle – klare Zahlen.",
