---
export interface Props {
  title?: string;
  subtitle?: string;
  useCases?: Array<{
    title: string;
    description: string;
    outcome?: string;
    icon?: string;
  }>;
}

const {
  title = "Typische Use Cases",
  subtitle = "Drei Beispiele, wie Automatisierung deinen Alltag sp√ºrbar entlastet.",
  useCases = [],
} = Astro.props;

const iconMeta: Record<string, { title: string; d: string }> = {
  mail: {
    title: "Email Icon",
    d: "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
  },
  document: {
    title: "Document Icon",
    d: "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z",
  },
  book: {
    title: "Book Icon",
    d: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
  },
  link: {
    title: "Link Icon",
    d: "M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1",
  },
};
---

<section id="use-cases" class="py-12 sm:py-16 md:py-20 bg-gray-50">
  <div class="max-w-8xl mx-auto px-3 sm:px-4 md:px-6 lg:px-12 xl:px-16">
    <div class="text-center mb-10 sm:mb-12 md:mb-16 px-4">
      <h2 class="section-title mb-3 sm:mb-4 animate-on-scroll">
        {title}
      </h2>
      <p
        class="section-subtitle max-w-3xl mx-auto animate-on-scroll"
        style="transition-delay: 0.15s"
      >
        {subtitle}
      </p>
    </div>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-5 md:gap-6 max-w-6xl mx-auto px-2 sm:px-3 md:px-4"
    >
      {
        useCases.map((item, index) => (
          <div
            class="bg-white rounded-xl p-5 sm:p-6 border border-gray-200 shadow-sm hover:shadow-md transition-all duration-300 animate-fade-in-up"
            style={`animation-delay: ${(index + 1) * 150}ms`}
          >
            <div class="mb-4">
              <div class="w-11 h-11 sm:w-12 sm:h-12 rounded-lg sm:rounded-xl bg-orange-50 flex items-center justify-center">
                {item.icon && iconMeta[item.icon] && (
                  <svg
                    class="w-5 h-5 sm:w-6 sm:h-6 text-orange-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <title>{iconMeta[item.icon].title}</title>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d={iconMeta[item.icon].d}
                    />
                  </svg>
                )}
              </div>
            </div>
            <h3 class="text-base sm:text-lg font-black text-gray-900 mb-2">
              {item.title}
            </h3>
            <p class="text-sm sm:text-base font-medium text-gray-600 leading-relaxed mb-3">
              {item.description}
            </p>
            {item.outcome && (
              <div class="pt-1">
                <p class="text-sm sm:text-base font-semibold text-gray-900">
                  Ergebnis:{" "}
                  <span class="font-medium text-gray-700 underline decoration-green-500 decoration-2 underline-offset-2">
                    {item.outcome}
                  </span>
                </p>
                <p class="text-xs sm:text-sm text-gray-500 mt-1">
                  So zeigt sich die Verbesserung im Alltag.
                </p>
              </div>
            )}
          </div>
        ))
      }
    </div>
  </div>
</section>
