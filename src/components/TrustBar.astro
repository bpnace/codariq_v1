---
export interface Props {
  badges?: Array<{
    name: string;
    icon: string;
    description: string;
  }>;
  showLogos?: boolean;
  className?: string;
}

const {
  badges = [
    {
      name: "Klimafreundlich",
      icon: "climate-friendly",
      description: "CO₂ neutrales Hosting und umweltfreundliche Serverinfrastruktur"
    },
    {
      name: "DSGVO konform",
      icon: "gdpr-ready",
      description: "Vollständige Datenschutz-Grundverordnung Compliance nach EU-Standard"
    },
    {
      name: "Remote verfügbar",
      icon: "remote-only",
      description: "100% digitale Beratung und Implementierung - ortsunabhängig"
    }
  ],
  showLogos = true,
  className = ""
} = Astro.props;
---

<section id="trust-bar" class={`py-12 sm:py-16 bg-white ${className}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8 sm:mb-12 px-4">
      <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-2">
        Vertrauen Sie auf nachhaltige Qualität
      </h2>
      <p class="text-sm sm:text-base text-gray-600">Zertifiziert und zukunftssicher</p>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 sm:gap-6 md:gap-8 max-w-4xl mx-auto px-4">
      {badges.map((badge, index) => (
        <div 
          class="flex flex-col items-center group hover:transform hover:-translate-y-1 transition-all duration-300 bg-white rounded-xl p-4 sm:p-6 shadow-sm hover:shadow-md border border-gray-100 ${index === 2 ? 'sm:col-span-2 md:col-span-1' : ''}"
          style={`animation: fadeInUp 0.6s ease-out ${index * 150}ms both`}
        >
          <!-- Badge Image -->
          <div class="mb-3 sm:mb-4 transition-transform duration-300 group-hover:scale-105">
            <img 
              src={`/images/badges/${badge.icon}.webp`}
              alt={badge.name}
              class="w-16 h-24 sm:w-20 sm:h-32 object-contain"
              loading="lazy"
            />
          </div>
          
          <!-- Badge Text -->
          <div class="text-center">
            <h3 class="font-semibold text-gray-900 text-sm sm:text-base mb-1 sm:mb-2">
              {badge.name}
            </h3>
            <p class="text-xs sm:text-sm text-gray-600 leading-relaxed">
              {badge.description}
            </p>
          </div>
          
        </div>
      ))}
    </div>

    <!-- Social Proof -->
    {showLogos && (
      <div class="mt-12 sm:mt-16 text-center px-4">
        <p class="text-base sm:text-lg font-medium text-gray-900 mb-6 sm:mb-8">
          Viele deutsche Mittelstandsunternehmen vertrauen bereits auf unsere Lösungen
        </p>
        
        <div class="flex flex-wrap justify-center items-center gap-4 sm:gap-6 md:gap-8 opacity-60 hover:opacity-80 transition-opacity">
          {[1, 2, 3, 4, 5].map((logo) => (
            <div class="h-10 w-20 sm:h-12 sm:w-28 bg-gray-100 rounded-lg flex items-center justify-center hover:bg-gray-200 transition-colors">
              <span class="text-xs sm:text-sm text-gray-500 font-medium">Partner {logo}</span>
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 0.6;
      transform: translateY(0);
    }
  }
  
  .group:hover * {
    animation-play-state: paused;
  }
</style>