---
export interface Props {
  badges?: Array<{
    name: string;
    icon: string;
    description: string;
  }>;
  showLogos?: boolean;
  className?: string;
}

const {
  badges = [
    {
      name: "DSGVO konform",
      icon: "gdpr-ready",
      description:
        "Hosting und Datenverarbeitung in der EU auf Wunsch auch in Deutschland, damit eure Daten dort bleiben, wo sie hingehören.",
    },
    {
      name: "EU-gehostet",
      icon: "EU-hosted",
      description:
        "Hosting und Datenverarbeitung in der EU auf Wunsch auch in Deutschland, damit eure Daten dort bleiben, wo sie hingehören.",
    },
    {
      name: "Remote verfügbar",
      icon: "remote-only",
      description:
        "Hosting und Datenverarbeitung in der EU auf Wunsch auch in Deutschland, damit eure Daten dort bleiben, wo sie hingehören.",
    },
  ],
  showLogos = true,
  className = "",
} = Astro.props;
---

<section id="trust-bar" class={`py-12 sm:py-16 bg-white ${className}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:flex md:flex-row md:items-stretch md:justify-center gap-4 sm:gap-6 md:gap-0 max-w-4xl mx-auto px-4"
    >
      {
        badges.map((badge, index) => (
          <div
            class={`relative ${index === 2 ? "sm:col-span-2 md:col-span-1" : ""} md:flex-1`}
          >
            <div
              class="flex flex-col items-center group transition-all duration-300 bg-white rounded-xl p-4 sm:p-6 animate-fade-in-up h-full"
              style={`animation-delay: ${index * 150}ms`}
            >
              {/* Badge Image - Made smaller */}
              <div class="mb-3 sm:mb-4 transition-transform duration-300">
                <img
                  src={`/images/badges/${badge.icon}.webp`}
                  alt={badge.name}
                  class={`w-12 h-16 sm:w-16 sm:h-24 ${badge.icon === "EU-hosted" ? "object-cover" : "object-contain"}`}
                  loading="lazy"
                />
              </div>

              {/* Badge Text */}
              <div class="text-center">
                <h3 class="font-semibold text-gray-900 text-sm sm:text-base mb-1 sm:mb-2">
                  {badge.name}
                </h3>
                <p class="text-xs sm:text-sm text-gray-600 leading-relaxed">
                  {badge.description}
                </p>
              </div>
            </div>

            {
              index < badges.length - 1 && (
                <div
                  class="hidden md:block absolute top-1/2 -translate-y-1/2 w-px h-[50px] bg-gray-200 right-[-0.5px]"
                  aria-hidden="true"
                ></div>
              )
            }
          </div>
        ))
      }
    </div>

    <!-- Social Proof -->
           <div class="max-w-7xl mx-auto px-3 sm:px-6 lg:px-8 pt-10">
        <div class="flex flex-col items-center">
          <p class="color-text-primary text-xs sm:text-sm mb-4 font-medium">
            Zertifizierte Partnerschaften mit führenden Unternehmen:
          </p>
          <div
            class="flex items-center justify-center space-x-4 sm:space-x-6 md:space-x-8"
          >
            <img
              src="/images/logos/google.svg"
              alt="Google"
              class="h-8 sm:h-10 w-auto opacity-80"
              loading="lazy"
              decoding="async"
            />
            <img
              src="/images/logos/n8n.svg"
              alt="n8n"
              class="h-12 sm:h-14 w-auto opacity-80"
              loading="lazy"
              decoding="async"
            />
            <img
              src="/images/logos/ibm.svg"
              alt="IBM"
              class="h-14 sm:h-16 w-auto opacity-80"
              loading="lazy"
              decoding="async"
            />
            <img
              src="/images/logos/mistral.svg"
              alt="Mistral"
              class="h-5 sm:h-8 w-auto opacity-80"
              loading="lazy"
              decoding="async"
            />
            <img
              src="/images/logos/openai.svg"
              alt="OpenAI"
              class="h-8 sm:h-10 w-auto opacity-80"
              loading="lazy"
              decoding="async"
            />
          </div>
        </div>
      </div>
      <!-- Trust Bar with Partner Logos -->
</section>

<style>
  .group:hover * {
    animation-play-state: paused;
  }
</style>
