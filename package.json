    "@typescript-eslint/parser": "^8.49.0",
    "astro-compress": "^2.3.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "happy-dom": "^20.3.1",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.7",
