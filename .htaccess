# Force HTTPS and www to non-www in one step (avoid redirect chains)
RewriteEngine On

# Disable mod_dir's automatic directory slash handling
DirectorySlash Off

# Enable directory indexes
DirectoryIndex index.html index.htm

# ============================================
# 301 Redirects for Old Blog URLs (renamed posts)
# ============================================
# Redirect old blog post URLs to new ones
RewriteRule ^blog/teams-erfolgreich-auf-ki-vorbereiten/?$ https://codariq.de/blog/ki-teams-vorbereiten [R=301,L,NE]
RewriteRule ^blog/roi-von-prozessautomatisierung-maximieren/?$ https://codariq.de/blog/automatisierung-roi-maximieren [R=301,L,NE]

# ============================================
# Canonical URL Enforcement (HTTPS + non-www)
# ============================================
# Combined redirect: www OR non-HTTPS to canonical HTTPS non-www (single redirect)
# This ensures only ONE redirect happens for all variants
RewriteCond %{HTTP_HOST} ^www\.codariq\.de [NC,OR]
RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} ^(?:www\.)?codariq\.de$ [NC]
RewriteCond %{REQUEST_URI} !^/.well-known/
RewriteRule ^(.*)$ https://codariq.de/$1 [L,R=301,NE]

# Remove trailing slashes from external URLs FIRST (for when users explicitly add them)
# This redirects /faq/ to /faq
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} (.+)/$
RewriteCond %{REQUEST_URI} !^/$
RewriteRule ^(.*)/$ https://codariq.de/$1 [L,R=301,NE]

# CRITICAL: Internal rewrite - serve index.html without redirect
# This allows /faq to serve /faq/index.html internally without any visible redirect
# Must use END flag to prevent mod_dir from interfering
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^(.+)$ %{DOCUMENT_ROOT}/$1/index.html [L,END]


# Security headers
<IfModule mod_headers.c>
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Cache control
<IfModule mod_expires.c>
    ExpiresActive on

    # HTML - shorter cache for content updates
    ExpiresByType text/html "access plus 1 day"

    # CSS, JS - longer cache but with revalidation
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"

    # Images - long cache, don't change often
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # Fonts - long cache
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"

    # JSON and XML files
    ExpiresByType application/json "access plus 1 month"
    ExpiresByType application/xml "access plus 1 month"
    ExpiresByType text/xml "access plus 1 month"

    # Default fallback
    ExpiresDefault "access plus 1 month"
</IfModule>

# Additional cache headers
<IfModule mod_headers.c>
    # Add cache control headers for better performance
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|webp|svg|ico|woff2|ttf|woff|json|xml)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # HTML files - shorter cache
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>
</IfModule>
