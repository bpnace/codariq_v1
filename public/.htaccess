RewriteEngine On

# Force non-www on HTTPS
RewriteCond %{HTTP_HOST} ^www\.codariq\.de$ [NC]
RewriteRule ^(.*)$ https://codariq.de/$1 [R=301,L]

# Strip ?search= query params to canonical URL
RewriteCond %{QUERY_STRING} (^|&)search= [NC]
RewriteRule ^(.*)$ https://codariq.de/$1? [R=301,L]

# Remove trailing slash (except root)
RewriteCond %{REQUEST_URI} .+/$
RewriteRule ^(.+)/$ https://codariq.de/$1 [R=301,L]

# Redirect .html to clean URL
RewriteCond %{THE_REQUEST} \s/([^\s]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# Pretty URL rewrites for file-based output
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^$ /index.html [L]
RewriteRule ^blog$ /blog.html [L]
RewriteRule ^(.+)$ /$1.html [L]
